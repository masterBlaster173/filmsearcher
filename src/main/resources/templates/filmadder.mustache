<!-- Тимплейт пользователя для просмотра и внесения фильма в список -->
<html>

<body>
<style>
    table {
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid black;
    }
</style>
<div><b> Опубликуйте обзор фильма: </b></div>
<div>
    <form method="post">
        <input type="text" name="title" placeholder="Название фильма"/>
        <input type="text" name="year" placeholder="Год выхода"/>
        <p><input type="text" name="filmDescrip" placeholder="Описание"/></p>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <div> Выберете актёров, сыгравших в главных ролях:
            <table>
                {{#actors}}
                    <tr>
                        <td><input type="checkbox" value="{{firstame}} {{lastname}}" name="mainActor"></td>
                        <td>{{firstame}} {{lastname}}</td>
                    </tr>
                {{/actors}}
            </table>
        </div>
        <button type="submit">Опубликовать</button>
    </form>
    <p><a href="/add-film" > Обновить форму </a></p>
</div>
<hr>
<div> <b>Список фильмов </b></div>
<hr>
{{#films}}

    <table class="table ">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Название</th>
        <th scope="col">В ролях:</th>
        <th scope="col">Год</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">{{id}}</th>
        <td>{{title}}</td>
        <td>{{mainActor}}<br></td>
        <td>{{year}}</td>
    </tr>
    </tbody>
    </table>
         <p>Описание:</p>
        <p><i>{{filmDescrip}}</i></p>
        <hr>
{{/films}}

    <form action="/logout" method="post">
        <input type="submit" value="Sign Out"/>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    </form>
<p><a href="/" > На главную </a></p>
</body>

</html>

